<Window x:Class="Project07.DetailInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project07"
        mc:Ignorable="d"
        Title="공고" Height="600" Width="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="390"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="DetailView" Grid.Column="1" Grid.Row="1" Margin="10,10,10,10"
                    >


        </StackPanel>
        <Label Grid.Column="1" Content="공고 상세정보" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="40" FontWeight="Bold"/>
        <Button Content="뒤로가기" HorizontalAlignment="Center" Margin="0,10,0,80" Click="Button_Click"/>
        <Button x:Name="CompanyInfo" Grid.Column="1" Content="기업 상세정보" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="40" Width="100" Click="CompanyInfo_Click" />

    </Grid>
</Window>
